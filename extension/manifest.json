{
  "manifest_version": 3,
  "name": "MyDM - Download Manager",
  "version": "1.0.0",
  "description": "An IDM-like downloader that integrates with Chrome for segmented multi-threaded downloads",
  "permissions": [
    "contextMenus",
    "nativeMessaging",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "MyDM Download Manager",
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "icons": {
    "48": "icon48.png"
  }
}
